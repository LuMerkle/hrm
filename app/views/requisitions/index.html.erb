<h1>Listing requisitions</h1>

<table>
  <thead>
    <tr>
      <th>Req</th>
      <th>Og</th>
      <th>Position title</th>
      <th>Location</th>
      <th>Hiring mgr</th>
      <th>Opening</th>
      <th>Recruiter</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requisitions.each do |requisition| %>
      <tr>
        <td><%= requisition.req_id %></td>
        <td><%= requisition.og_id %></td>
        <td><%= requisition.position_title %></td>
        <td><%= requisition.location_id %></td>
        <td><%= requisition.hiring_mgr_id %></td>
        <td><%= requisition.opening %></td>
        <td><%= requisition.recruiter_id %></td>
        <td><%= requisition.state_id %></td>
        <td><%= link_to 'Show', requisition %></td>
        <td><%= link_to 'Edit', edit_requisition_path(requisition) %></td>
        <td><%= link_to 'Destroy', requisition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Requisition', new_requisition_path %>
